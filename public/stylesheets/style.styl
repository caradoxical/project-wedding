/*
 * Import nib
 */
@import 'nib'

/*
 * Grab a custom font from Google
 */
@import url('http://fonts.googleapis.com/css?family=Quicksand')

@font-face
  font-family 'riesling'
  src url('/fonts/riesling.ttf') format('truetype')


@font-face
  font-family 'Parisish'
  src url('/fonts/Parisish.ttf') format('truetype')

/*
 * Nib provides a CSS reset
 */
global-reset()

/*
 * Store the main color and
 * background color as variables
 */
main-color = #e3d8c4
background-color = #faf9f0

body
  font-family 'Georgia'
  background-color background-color
  color #444

header
  .nav-bar,a
    font-family 'Sans'
    font-size 20px
    color #57425c
    text-align center
    box-shadow 0 8px 8px -6px #888
    text-decoration none
    :hover
      background-color: lighten(main-color, 30%)
    .nav-item
      box-shadow none
      display inline-block
      padding 10px 10px
  
  .title
    font-family 'Riesling'
    padding 20px 10px
    color #4e718d
    font-size 75px
    text-align center
    text-decoration none
    box-shadow none
    display block
    .highlight
      color #57425c
      font-weight bold

  /*
   * Note the use of the `main-color`
   * variable and the `darken` function
   */
  background-color main-color
  border-bottom 1px solid darken(main-color, 30%)
  text-shadow 0px -1px 0px darken(main-color, 30%)
	
	h1
	  clear both
	    
	h2
	  font-family 'Parisish'
	  margin-top -20px
	  padding 0px 10px
	  color #000
	  font-size 25px
	  text-align center
	
.container
  width 500px
  margin 50px auto
  overflow hidden

.main-content
  float left
  width 300px

  p
    margin-bottom 20px

.sidebar
  float left
  width 200px

  .widget

    /*
     * Note the lack of vendor
     * prefixes here. Nib will
     * add them for us
     */
    border-radius 3px
    border 1px solid #ccc
    margin-left 20px
    background-color background-color
    box-shadow inset 0px 0px 0px 3px rgba(#fff, 0.8), 0px 3px 0px -2px rgba(#000, 0.1)

    h1
      font-family 'Quicksand'
      margin 13px 10px 4px
      padding-bottom 10px
      border-bottom 1px dotted #ddd
      border-radius 2px 2px 0px 0px
      margin-bottom 10px

    p
      font-size 13px
      padding 0px 10px
      margin-bottom 10px

p
  line-height 1.8

footer
  width 500px
  margin 50px auto
  border-top 1px dotted #ccc
  padding-top 5px
  font-size 13px
/*
 * Import nib
 */
@import 'nib'

/*
 * Add custom fonts
 */
@font-face
  font-family 'riesling'
  src url('/fonts/riesling.ttf') format('truetype')
@font-face
  font-family 'Parisish'
  src url('/fonts/Parisish.ttf') format('truetype')

/*
 * Nib provides a CSS reset
 */
global-reset()

*
  -webkit-box-sizing border-box
  -moz-box-sizing border-box
  box-sizing border-box

article
aside
details
figcaption
figure
footer
header
hgroup
nav
section
summary
  display block
  
audio
canvas
video
  display inline-block
  *display inline
  *zoom 1

/*
 * Store the main color and
 * background color as variables
 */
main-color = #838383
bg-color = #fffffa
accent-color-1 = #da594c
accent-color-2 = #42c1d5

body
  border-top 3px solid accent-color-1
  background url('/img/background_repeat.png') repeat top left bg-color
  color main-color
  font-family 'Helvetica Neue', Helvetica, Arial, sans-serif
  font-size 16px
  line-height 20px
  
a
a:visited
  text-decoration none
  color accent-color-1

a:hover
  color accent-color-2
  
ul
  padding-left 0

.pull-left
  float left
  
.pull-right
  float right
  
.center
  margin 0 auto

@media screen and (max-width: 480px)
  .hide-mobile
    display none
  .show-mobile
    display block
    
h1
h2
h3
h4
h5
h6
  margin 0 0 15px 0
  font-weight normal
  -webkit-font-smoothing antialiased
  -moz-font-smoothing antialiased
  -ms-font-smoothing antialiased  
  -o-font-smoothing antialiased
  font-smoothing antialiased

h1
  font-family Riesling //'MenschRegular', Helvetica, Arial, sans-serif
  font-weight normal
  font-size 48px
  color accent-color-1
  line-height 50px
  margin-bottom 0
  small
    font-family Parisish
    diaply block
    font-size 22px
    color main-color
    line-height 27px
    margin-bottom 0
    
h2
  font-family 'MenschRegular', Helvetica, Arial, sans-serif
  font-weight normal
  font-size 36px
  color #2c2b2b
  line-height 40px
  margin-bottom 0 
  
h3
  font-family 'MenschRegular', Helvetica, Arial, sans-serif
  font-weight normal
  font-size 36px
  color accent-color-1
  line-height 40px
  margin-bottom 0  
  a
    color accent-color-2
    font-size 18px
    border-bottom 1px dotted accent-color-2
    padding-bottom 6px
    float right
    margin-top -14px
    display block
    &:hover
      color #31909f

h4
  font-family 'MenschRegular', Helvetica, Arial, sans-serif
  -webkit-font-smoothing antialiased
  -moz-font-smoothing antialiased
  -ms-font-smoothing antialiased  
  -o-font-smoothing antialiased
  font-smoothing antialiased
  color #da594c
  font-size 20px
  line-height 25px

h5
  font-size 18px
  line-height 25px
  color main-color
  
p
  color main-color
  -webkit-font-smoothing antialiased
  -moz-font-smoothing antialiased
  -ms-font-smoothing antialiased  
  -o-font-smoothing antialiased
  font-smoothing antialiased

blockquote
  font-family 'MenschRegular', Helvetica, Arial, sans-serif
  -webkit-font-smoothing antialiased
  -moz-font-smoothing antialiased
  -ms-font-smoothing antialiased  
  -o-font-smoothing antialiased
  font-smoothing antialiased
  font-size 30px
  line-height 35px
  p
    quotes '\201C' '\201D' '\2018' '\2019'
    &:before
      content open-quote
    &:after
      content close-quote

@media screen and (max-width: 480px)
  h1
    font-size 40px
  h2
    font-size 32px
  blockquote
    font-size 22px
    line-height 27px

form
  margin 0 0 20px

fieldset
  padding 0
  margin 0
  border 0

legend
  display block
  width 100%
  padding 0
  margin-bottom 20px
  font-size 21px
  line-height 40px
  color #333
  border 0
  border-bottom 1px solid #e5e5e5
  small
    font-size 15px
    color #999

label
input
button
select
textarea
  font-size 18px
  font-weight normal
  line-height 20px
  padding 15px 20px
  
input
button
select
textarea
  font-family 'MenschRegular', Helvetica, Arial, sans-serif

label
  display inline-block
  margin-bottom 5px
  text-align right
  font-family 'MenschRegular', Helvetica, Arial, sans-serif
  padding-left 0
  text-transform uppercase
  
select
textarea
  display inline-block
  margin-bottom 9px
  font-size 18px
  line-height 20px
  color #555
  -webkit-border-radius 4px
  border-radius 4px

input[type='password']
  display inline-block
  margin-bottom 9px
  font-size 18px
  line-height 20px
  color #555
  height 57px
  -webkit-box-shadow 0 0 0
  box-shadow 0 0 0
  -webkit-border-radius 4px
  border-radius 4px
  -webkit-font-smoothing antialiased
  -moz-font-smoothing antialiased
  -ms-font-smoothing antialiased
  -o-font-smoothing antialiased
  font-smoothing antialiased
  -webkit-appearance none
  -moz-appearance none
  -ms-appearance none
  -o-appearance none
  appearance none
  background-color rgba(255,255,255, 0.4)
  border 1px solid #e5e5e1

input:focus
textarea:focus
select:focus
  color accent-color-2

button[type='submit']
input[type='submit']
  -webkit-appearance none
  -moz-appearance none
  -ms-appearance none
  -o-appearance none
  appearance none
  outline none
  border none
  font-family 'MenschRegular', Helvetica, Arial, sans-serif
  display inline block
  margin-bottom 9px
  padding-left 60px
  padding-right 60px
  font-size 18px
  text-align center
  line-height 20px
  color bg-color
  height 56px
  background accent-color-1
  -webkit-border-radius 4px
  border-radius 4px

hr
  display block
  float left
  margin-right 4.4%
  width 100%
  border 0
  margin 0
  border-bottom 1px solid rgba(44,43,43,0.1)
  &:last-child
    margin-right 0

.full-width
  width 100%
  background-image url('/img/background_repeat.png')
  background-repeat repeat
  background-color bg-color
  padding 50px 0px
  &.header
    padding 0
  &.footer
    padding-bottom 34px
  &.tan
    background-color #f1f1eb
  &.red
    background-color accent-color-1
  &.blue
    background-color accent-color-2
  &.dark-grey
    background-color #2c2c2c
  &.flat
    background-image none
  &.flush-bottom
    padding-bottom 0
  &.flush-top
    padding-top 0
  .heading
    display block
    float left
    margin-right 4.4%
    width 100%
    text-align center
    &:last-child
      margin-right 0
    h1 + p, h2 + p
      line-height 25px
      font-size 18px
      max-width 720px
      margin 0 auto
      padding 20px
    &.left
      text-align left
    nav
      padding 25px 0
      font-size 16px
      color main-color
      font-family 'MenschRegular', Helvetica, Arial, sans-serif
      a
        color inherit
        &:hover
          color #626262
      ul
        zoom 1
        &:before, &:after
          content ''
          display table
        &:after
          clear both
        li:not(.pull-right)
          float left
      .arrows
        zoom 1
        &:before, &:after
          content ''
          display table
        &:after
          clear both
        span
          display block
          float left
          width 1px
          height 20px
          background #c2c2be
          margin -6px 7px 0 7px
        .arrow
          width 100%
          height 10px
          float left
          border none
          background transparent
          padding 0
          -webkit-transform rotate(45deg)
          -moz-transform rotate(45deg)
          -ms-transform rotate(45deg)
          -o-transform rotate(45deg)    
          transform rotate(45deg)
          &.left
            border-bottom 1px solid #80807d
            border-left 1px solid #80807d
          &.right
            border-top 1px solid #80807d
            border-right 1px solid #80807d
          &:hover
            border-color #60605d

//Possibly move
@media screen and (max-width: 480px)
  .full-width.header
    header 18px 0
    
.container
  zoom 1
  max-width 62.5em
  margin-left auto
  margin-right auto
  &:before, &:after
    content ''
    display table
  &:after
    clear both
    
@media screen and (max-width: 1000px)
  .container
    padding-left 20px
    padding-right 20px

img.fit
  width 100%

header.container
  nav.site-nav
    display block
    float left
    margin-right 4.4%
    width 100%
    text-align center
    &:last-child
      margin-right 0
    ul
      padding-left 0
      margin 0
      display table
      table-layout fixed
      width 100%
      li
        vertical-align middle
        text-transform uppercase
        font-family 'MenschRegular', Helvetica, Arial, sans-serif
        font-size 18px
        line-height 24px
        a
          color #393939
          padding 20px 0
          &:hover
            color accent-color-2
        &.current-menu-item:not(.logo) a, &.current_page_item:not(.logo) a
          color accent-color-1
          border-bottom 1px dotted
          padding bottom
        &.logo
          width 100px
          height 120px
          a
            display block
            width 112
            height 112
            margin 0 auto
            background transparent url(/img/anchor.png) no-repeat 0 0
            text-indent -999em
      &.desktop
        display table
        table-layout fixed
        width 100%
        li
          display table-cell
          width 20%
      &.mobile
        display none
        li
          padding 10px 0
          float left
          width 25%
          margin-top 15px
          &.logo
            display none

@media screen and (max-width: 768px)
  header.containter nav.site-nav ul
    &.mobile
      display block
      li a.active
        padding-bottom 5px
    &.desktop li:not(.logo)
      display none

@media screen and (max-width: 480px)
  header.containter nav.site-nav ul.mobile li
    width 50%
    a.active
      padding-bottom 5px  
  
.footer-foot
  .info
    float left
    width 70%
    p
      font-size 14px
      line-height 24px
      margin 0
      span
        color bg-color
  
  
  
  
  
  
  
  
  
  
  
  
  
  
  
  
  
  
  
  
  